{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/lib.tsbuildinfo",
    "composite": true,
    "rootDir": "src",
    "module": "preserve",
    "target": "ES2020",
    "outDir": "dist/",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}