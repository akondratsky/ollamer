{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/lib.tsbuildinfo",
    "composite": true,
    "rootDir": "src",
  
    "module": "NodeNext",
    "target": "ES2020",
  
    "outDir": "dist/",
    "moduleResolution": "NodeNext",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}